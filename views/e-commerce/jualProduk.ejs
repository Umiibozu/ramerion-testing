<%- include('atas', {judul: 'Jual Produk'}) %>

    <div class="container d-md-flex align-items-stretch">
      <!-- Page Content  -->
      <div id="content" class="p-4 p-md-5 pt-5">
        <h2 class="mb-4">Mulai Menjual</h2>
        <div class="row">
          <div class="col-12 mb-4 mt-4">
            <form action="/ecommerce/addProduk" method="post">
              <input type="hidden" name="user_id" value="<%= id%>">
              <div class="form">
                <label for="exampleInputEmail1" class="form-label">Nama Produk</label>
                  <div class="form-group d-flex">
                    <div class="icon"><span class="icon-paper-plane"></span></div>
                    <input type="text" class="form-control" placeholder="Masukkan Nama Produk Anda" name="nama"/>
                  </div>
              </div>
              <div class="input-group mb-3">
                <label class="input-group-text" for="inputGroupSelect01">Kategori</label>
                <select class="form-select" id="inputGroupSelect01" name="id_kategori">
                <% kategori.forEach(function(ktgr, index) { %>
                  <option value="<%= ktgr.id %>"><%= ktgr.nama %></option>
                  <% }) %>
                </select>
              </div>
              <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Deskripsi Produk</label>
                  <div class="form-group d-flex">
                    <div class="icon"><span class="icon-paper-plane"></span></div>
                    <input type="text" class="form-control" placeholder="Masukkan keterangan mengenai produk" name="deskripsi" />
                  </div>
              </div>
              <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Harga</label>
                  <div class="form-group d-flex">
                    <div class="icon"><span class="icon-paper-plane"></span></div>
                    <input type="number" class="form-control" min="0" name="harga" placeholder="Masukkan Harga yang akan dibeli pelanggan" name="harga" />
                  </div>
              </div>
              <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Jumlah Stok</label>
                  <div class="form-group d-flex">
                    <div class="icon"><span class="icon-paper-plane"></span></div>
                    <input type="number" class="form-control" min="0" name="stok" placeholder="Masukkan jumlah stok yang tersedia" />
                  </div>
              </div>
              <!-- <div class="mb-3">
                <label class="form-label" for="customFile">Masukkan Foto Produk</label>
                <input type="file" class="form-control" id="customFile" />
              </div> -->
              <button type="submit" class="btn btn-primary" style="float: right">Tambah</button>
            </form>
          </div>
        </div>
      </div>

      <%- include('sidebar') %>
    </div>

<%- include('bawah') %>
